{
  "manifest_version": 3,
  "name": "Clear Cart",
  "version": "1.0",
  "description": "Deletes the 'cart' cookie when the extension icon is clicked, in effect this clears the cart",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["cookies", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  }
}
